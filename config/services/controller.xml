<?xml version="1.0" encoding="UTF-8" ?>

<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true" autoconfigure="true" public="false" />

        <service id="BitExpert\SyliusTwoFactorAuthPlugin\Controller\Admin\TwoFactorController" public="true" autoconfigure="true"
            class="BitExpert\SyliusTwoFactorAuthPlugin\Controller\Admin\TwoFactorController">
            <argument type="service" id="sylius_twig_hooks.factory.hookable_metadata" />
            <argument type="service" id="sylius.repository.admin_user" />
            <argument type="service" id="scheb_two_factor.security.google_authenticator" />
            <argument type="service" id="scheb_two_factor.security.email.code_generator" />
            <argument type="service" id="security.token_storage" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>

            <tag name="controller.service_arguments" />
        </service>

        <service id="BitExpert\SyliusTwoFactorAuthPlugin\Controller\Shop\TwoFactorController" public="true" autoconfigure="true"
                 class="BitExpert\SyliusTwoFactorAuthPlugin\Controller\Shop\TwoFactorController">
            <argument type="service" id="sylius_twig_hooks.factory.hookable_metadata" />
            <argument type="service" id="sylius.repository.shop_user" />
            <argument type="service" id="scheb_two_factor.security.google_authenticator" />
            <argument type="service" id="scheb_two_factor.security.email.code_generator" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>

            <tag name="controller.service_arguments" />
        </service>
    </services>
</container>
