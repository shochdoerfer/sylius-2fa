<?xml version="1.0" encoding="UTF-8" ?>

<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="false" />

        <service id="bitexpert_sylius_2fa.controller"
                 abstract="true"
                 class="BitExpert\SyliusTwoFactorAuthPlugin\Controller\TwoFactorController">
            <argument type="service" key="$hookableMetadataFactory" id="sylius_twig_hooks.factory.hookable_metadata" />
            <argument type="service" key="$googleAuthenticator" id="scheb_two_factor.security.google_authenticator" />
            <argument type="service" key="$codeGenerator" id="scheb_two_factor.security.email.code_generator" />
            <argument type="service" key="$tokenStorage" id="security.token_storage" />
            <argument type="string"  key="$googleFormFlow">\BitExpert\SyliusTwoFactorAuthPlugin\Form\Type\Google\GoogleSetupFormFlowType</argument>
            <argument type="string"  key="$emailFormFlow">\BitExpert\SyliusTwoFactorAuthPlugin\Form\Type\Email\EmailSetupFormFlow</argument>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="bitexpert_sylius_2fa.controller.admin"
                 parent="bitexpert_sylius_2fa.controller"
                 autoconfigure="true"
                 autowire="true"
                 class="BitExpert\SyliusTwoFactorAuthPlugin\Controller\TwoFactorController">
            <argument type="service" key="$repository" id="sylius.repository.admin_user" />
            <argument type="string"  key="$entity">admin_user</argument>
            <argument type="string"  key="$redirectRoute">sylius_admin_dashboard</argument>
            <argument type="string"  key="$template">@BitExpertSyliusTwoFactorAuthPlugin/admin/two_factor_setup.html.twig</argument>
            <tag name="controller.service_arguments" />
        </service>

        <service id="bitexpert_sylius_2fa.controller.shop"
                 parent="bitexpert_sylius_2fa.controller"
                 autoconfigure="true"
                 autowire="true"
                 class="BitExpert\SyliusTwoFactorAuthPlugin\Controller\TwoFactorController">
            <argument type="service" key="$repository" id="sylius.repository.shop_user" />
            <argument type="string"  key="$entity">shop_user</argument>
            <argument type="string"  key="$redirectRoute">bitexpert_sylius_2fa_shop_account_2fa_overview</argument>
            <argument type="string"  key="$template">@BitExpertSyliusTwoFactorAuthPlugin/shop/two_factor_setup.html.twig</argument>
            <tag name="controller.service_arguments" />
        </service>
    </services>
</container>
