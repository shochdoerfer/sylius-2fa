<?xml version="1.0" encoding="UTF-8" ?>

<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="BitExpert\SyliusTwoFactorAuthPlugin\EventSubscriber\AdminUserActivateTwoFactor"
                 class="BitExpert\SyliusTwoFactorAuthPlugin\EventSubscriber\AdminUserActivateTwoFactor">
            <argument type="service" id="router" />
            <argument type="service" id="scheb_two_factor.security.google_authenticator" />
            <argument type="service" id="sylius.repository.admin_user" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="BitExpert\SyliusTwoFactorAuthPlugin\EventSubscriber\TwoFactorAuthenticationLoginAttempt"
                 class="BitExpert\SyliusTwoFactorAuthPlugin\EventSubscriber\TwoFactorAuthenticationLoginAttempt">
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
