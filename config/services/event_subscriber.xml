<?xml version="1.0" encoding="UTF-8" ?>

<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="BitExpert\SyliusTwoFactorAuthPlugin\EventSubscriber\TwoFactorAuthenticationLoginAttempt"
                 class="BitExpert\SyliusTwoFactorAuthPlugin\EventSubscriber\TwoFactorAuthenticationLoginAttempt">
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="BitExpert\SyliusTwoFactorAuthPlugin\EventSubscriber\AdminUserFormComponentEventSubscriber"
                 class="BitExpert\SyliusTwoFactorAuthPlugin\EventSubscriber\AdminUserFormComponentEventSubscriber">
            <argument type="service" id="security.token_storage" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="BitExpert\SyliusTwoFactorAuthPlugin\Menu\ShopAccountMenuListener"
                 class="BitExpert\SyliusTwoFactorAuthPlugin\Menu\ShopAccountMenuListener">
            <tag name="kernel.event_listener" event="sylius.menu.shop.account" method="addMenuItem" />
        </service>
    </services>
</container>
